    <path id="Vector_3" d="M1 13.9555L46.1263 40.0477" stroke="var(--weather-mark-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path id="Vector_4" opacity="0.9" d="M16.926 7.20197L23.5632 15.6751L30.2004 7.20197" stroke="var(--weather-mark-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path id="Vector_5" opacity="0.9" d="M37.5818 11.2207L33.5732 21.2138L44.219 22.7337" stroke="var(--weather-mark-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path id="Vector_6" opacity="0.9" d="M44.4345 31.145L33.7888 32.6649L37.7973 42.6579" stroke="var(--weather-mark-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path id="Vector_7" opacity="0.9" d="M30.6314 47.0505L23.9942 38.5773L17.357 47.0505" stroke="var(--weather-mark-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path id="Vector_8" opacity="0.9" d="M9.97559 43.0318L13.9841 33.0387L3.33838 31.5188" stroke="var(--weather-mark-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path id="Vector_9" opacity="0.9" d="M3.12289 23.1074L13.7686 21.5875L9.76007 11.5945" stroke="var(--weather-mark-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </g>
    </svg>
  )}
  {currentWeather?.description === "thunderstorm" && (
    <svg width="78" height="62" viewBox="0 0 78 62" fill="none" xmlns="http://www.w3.org/2000/svg">
    <g id="Group" opacity="0.9">
    <path id="Vector" opacity="0.9" d="M35.1959 44.3444H20.4952C10.0928 44.3444 1.66029 37.4033 1.66029 28.8426C1.66029 20.2758 10.0928 13.3347 20.4952 13.3347H20.5074C23.8451 6.57012 30.4416 1.96094 38.0412 1.96094C45.6895 1.96094 52.3286 6.63099 55.6481 13.4687C56.4688 13.3833 57.314 13.3347 58.1651 13.3347C68.5675 13.3347 77 20.2758 77 28.8426C77 37.4033 68.5675 44.3444 58.1651 44.3444H42.5098" stroke="var(--weather-mark-color)" stroke-width="2" stroke-miterlimit="10"/>
