        <path d="M29.1089 50.9332V57.501" stroke="var(--weather-mark-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M39.8794 48.0472L43.1633 53.7351" stroke="var(--weather-mark-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M47.764 40.1627L53.4519 43.4466" stroke="var(--weather-mark-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M50.65 29.3921H57.2178" stroke="var(--weather-mark-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M47.764 18.6216L53.4519 15.3376" stroke="var(--weather-mark-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M39.8794 10.737L43.1633 5.04907" stroke="var(--weather-mark-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </g>
    </svg>
  )}
  {currentWeather?.description === "cloudy" && (
    <svg xmlns="http://www.w3.org/2000/svg" width="77" height="45" viewBox="0 0 77 45" fill="none">
      <path opacity="0.9" d="M76 27.919C76 36.4059 67.6047 43.2832 57.25 43.2832H19.75C9.39528 43.2832 1 36.4059 1 27.919C1 19.4322 9.39528 12.5495 19.75 12.5495H19.7606C23.0848 5.84692 29.6534 1.2832 37.215 1.2832C44.8296 1.2832 51.4407 5.91045 54.7436 12.6872C55.5614 12.5972 56.4004 12.5495 57.25 12.5495C67.6047 12.5495 76 19.4322 76 27.919Z" stroke="var(--weather-mark-color)" stroke-width="2" stroke-miterlimit="10"/>
    </svg>
  )}
  {currentWeather?.description === "rainy" && (
    <svg width="78" height="46" viewBox="0 0 78 46" fill="none" xmlns="http://www.w3.org/2000/svg">
    <g id="Group 3">
