    <path id="Vector_3" d="M1 41.6649H11.0483" stroke="var(--weather-mark-color)" stroke-width="2" stroke-miterlimit="10" stroke-linecap="round"/>
    <path id="Vector_4" d="M33.912 34.6623H62.4361" stroke="var(--weather-mark-color)" stroke-width="2" stroke-miterlimit="10" stroke-linecap="round"/>
    <path id="Vector_5" d="M10.1839 55.6699H35.9648" stroke="var(--weather-mark-color)" stroke-width="2" stroke-miterlimit="10" stroke-linecap="round"/>
