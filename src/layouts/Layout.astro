---
import "@fontsource/be-vietnam-pro";
import { ViewTransitions } from "astro:transitions";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
interface Props {
  title: string;
  theme: Theme | undefined;
}
const { title, theme } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="株式会社loadoffのホームページ" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class={theme}>
    <Header />
    <slot />
    <!-- {currentPath !== '/' && <Footer />} -->
  </body>
</html>
<style is:global>
  html {
    font-family: "Be Vietnam Pro", sans-serif;
  }
  body {
    margin: 0 auto;
    width: 100%;
  }
  .day {
    background-color: #EFEFEF;
    color: #444;
    --link-color: #444;
    --link-underline-color: #444;
    --svg-color: #444;
    --box-title-color: #444;
    --box-title-background-color: #FFF;
    --location-outer-color: #545454;
    --meter-divider-color: #444;
    --weather-mark-color: #444;
    --weather-graph-color: #545454;
  }
  .night {
    background-color: #112028;
    color: #FFF;
    --link-color: #FFF;
    --link-underline-color: #FFF;
    --svg-color: #FFF;
    --box-title-color: #FFF;
    --box-title-background-color: #858B8E;
    --location-outer-color: #FFF;
    --meter-divider-color: #FFF;
    --weather-mark-color: #FFF;
    --weather-graph-color: #FFF;
  }
</style>
