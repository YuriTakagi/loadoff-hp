---
import Layout from "../../layouts/Layout.astro";
import Sunny04Component from "../../components/Sunny04";
import Counter from "../../components/Counter";
import UseRefCounter from "../../components/UseRefCounter";
---

<Layout title="Company|株式会社loadoff">
  <main>
    <div class="container">
      <Sunny04Component client:only="react" transition:name="sunny" transition:persist/>
      <div class="front">
        <h1><a href="/">loadoff</a></h1>
        <nav class="menu">
          <ul class="menu-list">
            <a href="/company">Company</a>
            <a href="#">Service</a>
            <a href="#">Recruit</a>
            <a href="#">Contact</a>
          </ul>
        </nav>
      </div>
      <div class="content3">
        <h1>コンテンツ3</h1>
        <UseRefCounter client:only="react" transition:name="useRefCounter" transition:persist />
        </div>
      <Counter client:only="react" transition:name="counter" transition:persist/>
    </div>
  </main>
</Layout>

<style>
  .container {
    position: relative;
  }
  .container > Sunny01Component {
    z-index: 1;
  }
  .container > Counter {
    z-index: 1;
  }
  .front {
    position: absolute;
    top: 0;
    left: 0;
    color: #ffffff;
    z-index: 10;
    width: 100%;
    display: flex;
    align-items: baseline;
  }
  h1 {
    font-size: 5rem;
    padding-left: 2rem;
    padding-right: 2rem;
  }
  a {
    text-decoration: none;
  }
  li {
    list-style: none;
  }
  .menu {
    width: 100%;
    padding-right: 2rem;
  }
  .menu-list {
    font-size: 2.5rem;
    display: flex;
    justify-content: end;
    gap: 1.5rem;
  }
  .content3 {
    height: 50rem;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: lightskyblue;
  }
</style>
