---
import Layout from "../../layouts/Layout.astro";
import Rainy04Component from "../../components/Rainy04";
---

<Layout title="雨の日02-RoundedBox">
  <main>
    <div class="container">
      <Rainy04Component client:only="react"/>
      <div class="front">
        <h1>loadoff</h1>
        <nav class="menu">
          <ul class="menu-list">
            <li>Service</li>
            <li>Company</li>
            <li>Recruit</li>
            <li>Contact</li>
          </ul>
        </nav>
      </div>
    </div>
  </main>
</Layout>

<style>
  .container {
    position: relative;
  }
  .container > Rainy04Component {
    z-index: 1;
  }
  .front {
    position: absolute;
    top: 0;
    left: 0;
    color: #ffffff;
    z-index: 10;
    width: 100%;
    display: flex;
    align-items: baseline;
  }
  h1 {
    font-size: 5rem;
    padding-left: 2rem;
    padding-right: 2rem;
  }
  li {
    list-style: none;
  }
  .menu {
    width: 100%;
    padding-right: 2rem;
  }
  .menu-list {
    font-size: 2.5rem;
    display: flex;
    justify-content: end;
    gap: 1.5rem;
  }
</style>